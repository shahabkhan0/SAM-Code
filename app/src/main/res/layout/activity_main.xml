<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_background"
    android:backgroundTint="@color/background"
    android:orientation="vertical"
    tools:context=".activities.MainActivity">

    <RelativeLayout
        android:id="@+id/top_name"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/planecolor"
        android:backgroundTint="@color/planecolor"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="4dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="4dp"
            android:text="SAM ( SMART ANIMAL MARKET )"
            android:textColor="@color/white"
            android:textSize="17sp" />

        <ImageView
            android:id="@+id/sign_out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="8dp"
            android:padding="5dp"
            android:src="@drawable/account_circle_24"
            app:tint="@color/white" />


    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="8dp"
        app:cardElevation="5dp">

        <EditText
            android:id="@+id/search_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:drawableStart="@drawable/search"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:hint="Search here..."
            android:padding="10dp" />
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/animal_card"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/animal_sell_and_purchase_button" />

        <ImageView
            android:id="@+id/prodoct_card"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/animals_food_buying_and_selling_button" />

        <ImageView
            android:id="@+id/doctor_card"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/doctor_appointmant_button" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/butcher_card"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/butcher_appointment_button" />

        <ImageView
            android:id="@+id/tracking_card"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/tracking_system_button" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/animal_vector" />


</LinearLayout>