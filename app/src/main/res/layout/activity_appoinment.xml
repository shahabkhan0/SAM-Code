<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".activities.Appoinment">

    <RelativeLayout
        android:id="@+id/navigation_bar_appoinment"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/planecolor">

        <ImageView
            android:id="@+id/back_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="8dp"
            android:padding="6dp"
            android:src="@drawable/ic_baseline_arrow_back_24" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/app_name"
            android:textColor="@color/white" />

    </RelativeLayout>

    <TextView
        android:id="@+id/book_your_appointment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/navigation_bar_appoinment"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:text="Book Your Appointment"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/book_containt_appointment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/book_your_appointment"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="8dp"
        android:text="Enter Your Detail below"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="16sp" />


    <TextView
        android:id="@+id/date_appointment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/book_containt_appointment"
        android:layout_marginStart="18dp"
        android:layout_marginTop="7dp"
        android:text="Date"
        android:textAllCaps="false"
        android:textColor="@color/planecolor"
        android:textSize="20sp" />


    <androidx.cardview.widget.CardView
        android:id="@+id/date_card"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/date_appointment"
        android:layout_margin="7dp"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp"
        android:elevation="12dp"
        app:cardCornerRadius="12dp">


        <EditText
            android:id="@+id/new_email_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            android:hint="13/03/2022"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textSize="12sp" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/time_appointment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/date_card"
        android:layout_marginStart="18dp"
        android:layout_marginTop="7dp"
        android:text="Time"
        android:textAllCaps="false"
        android:textColor="@color/planecolor"
        android:textSize="20sp" />


    <androidx.cardview.widget.CardView
        android:id="@+id/time_card"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/time_appointment"
        android:layout_margin="7dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:elevation="12dp"
        app:cardCornerRadius="12dp">


        <EditText
            android:id="@+id/appointment_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            android:hint="12:52:02 pm"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textSize="12sp" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/description_appointment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/time_card"
        android:layout_marginStart="18dp"
        android:layout_marginTop="7dp"
        android:text="Description"
        android:textAllCaps="false"
        android:textColor="@color/planecolor"
        android:textSize="20sp" />


    <androidx.cardview.widget.CardView
        android:id="@+id/Description_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/description_appointment"
        android:layout_margin="7dp"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp"
        android:elevation="12dp"
        app:cardCornerRadius="12dp">


        <EditText
            android:id="@+id/appointment_description"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            android:hint="Add description"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textSize="12sp" />

    </androidx.cardview.widget.CardView>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/book_Appoinment"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="5dp"
        android:backgroundTint="@color/planecolor"
        android:elevation="8dp"
        android:text="Book Appoinment"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:cornerRadius="8dp" />

</RelativeLayout>